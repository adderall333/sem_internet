<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ArmchairExpertsCom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container" id="menuMargin">
            <a class="navbar-brand" asp-page="/Index">ArmchairExpertsCom</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active  mx-2 ">
                        <a class="nav-link" asp-page="/Index">Главная<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" asp-page="/Books">Книги</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="serails.html">Сериалы</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="movies.html">Фильмы</a>
                    </li>
                    <form class="form-inline mx-4 my-2 my-lg-0 ">
                        <input class="form-control mr-sm-2" type="search" placeholder="Поиск" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button>
                    </form>
                </ul>
                Профиль
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>