@page
@using ArmchairExpertsCom.Models
@model ArmchairExpertsCom.Pages.Profile

@{
    ViewData["Title"] = "Профиль";
}

<div class="topBackground">
    <div class="container">
        <div class="row">
            <div class="col-md-3" id="carouselPictures">
                @foreach (Image image in Model.User.Images)
                {
                    <img id="bookPictures" class="rounded border border-dark " src="@image.Path">
                }
            </div>
            <div class="col">
                <h3 class="text-center" id="books_nameOfPictures">@Model.User.FullName</h3>
                <div class="col">
                    <p class="text-center">Информация</p>
                    <p id="book_description">Дата рождения: @Model.User.BirthDate</p>
